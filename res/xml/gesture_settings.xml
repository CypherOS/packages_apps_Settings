<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:title="@string/gesture_settings_title"
    settings:keywords="@string/keywords_gestures">

    <SwitchPreference
        android:key="tap_to_wake"
        android:title="@string/tap_to_wake"
        android:summary="@string/tap_to_wake_summary" />

    <SwitchPreference
        android:key="gesture_double_tap_power"
        android:title="@string/double_tap_power_for_camera_title"
        android:summary="@string/double_tap_power_for_camera_summary" />

    <Preference
        android:key="swipe_to_screenshot"
        android:title="@string/swipe_to_screenshot_title"
        android:fragment="com.android.settings.aoscp.gestures.SwipeToScreenshotSettings" />

    <ListPreference
        android:key="gesture_quick_torch"
        android:title="@string/quick_torch_title"
        android:entries="@array/quick_torch_entries"
        android:entryValues="@array/quick_torch_values" />

    <SwitchPreference
        android:key="gesture_double_twist"
        android:title="@string/double_twist_for_camera_mode_title"
        android:summary="@string/double_twist_for_camera_mode_summary" />

    <SwitchPreference
        android:key="gesture_swipe_down_fingerprint"
        android:title="@string/fingerprint_swipe_for_notifications_title"
        android:summary="@string/fingerprint_swipe_for_notifications_summary" />

    <PreferenceCategory
            android:key="fingerprint_gestures"
            android:title="@string/fingerprint_gestures_title">

        <ListPreference
            android:key="single_tap"
            android:title="@string/gestures_single_tap"
            android:summary="%s"
            android:persistent="false"
            android:entries="@array/fp_gestures_entries"
            android:entryValues="@array/fp_gestures_values" />

        <ListPreference
            android:key="double_tap"
            android:title="@string/gestures_double_tap"
            android:summary="%s"
            android:persistent="false"
            android:entries="@array/fp_gestures_entries"
            android:entryValues="@array/fp_gestures_values" />

        <ListPreference
            android:key="long_press"
            android:title="@string/gestures_longpress"
            android:summary="%s"
            android:persistent="false"
            android:entries="@array/fp_gestures_entries"
            android:entryValues="@array/fp_gestures_values" />

        <ListPreference
            android:key="swipe_up"
            android:title="@string/gestures_swipe_up"
            android:summary="%s"
            android:persistent="false"
            android:entries="@array/fp_gestures_entries"
            android:entryValues="@array/fp_gestures_values" />

        <ListPreference
            android:key="swipe_down"
            android:title="@string/gestures_swipe_down"
            android:summary="%s"
            android:persistent="false"
            android:entries="@array/fp_gestures_entries"
            android:entryValues="@array/fp_gestures_values" />

        <ListPreference
            android:key="swipe_left"
            android:title="@string/gestures_swipe_left"
            android:summary="%s"
            android:persistent="false"
            android:entries="@array/fp_gestures_entries"
            android:entryValues="@array/fp_gestures_values" />

        <ListPreference
            android:key="swipe_right"
            android:title="@string/gestures_swipe_right"
            android:summary="%s"
            android:persistent="false"
            android:entries="@array/fp_gestures_entries"
            android:entryValues="@array/fp_gestures_values" />

    </PreferenceCategory>
  
</PreferenceScreen>