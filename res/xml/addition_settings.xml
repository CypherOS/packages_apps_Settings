<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
        android:title="@string/addition_settings_title">
		
		<Preference
                android:key="addition_settings_greeting"
                android:summary="@string/addition_settings_greeting"
                android:persistent="false"
                android:selectable="false" />
		
		<!-- Statusbar settings -->
		<PreferenceScreen
                android:key="statusbar_settings"
                android:title="@string/statusbar_settings_title"
				android:summary="@string/statusbar_settings_title_summary"
                android:fragment="com.android.settings.cypher.fragments.StatusbarSettings"
                android:icon="@drawable/ic_settings_statusbar" />
				
		<!-- Quick settings -->
		<PreferenceScreen
                android:key="quick_settings"
                android:title="@string/quick_settings_title"
				android:summary="@string/quick_settings_title_summary"
                android:fragment="com.android.settings.cypher.fragments.QuickSettings"
                android:icon="@drawable/ic_settings_quick_settings" />
				
		<!-- System settings -->
		<PreferenceScreen
                android:key="system_settings"
                android:title="@string/system_settings_title"
				android:summary="@string/system_settings_title_summary"
                android:fragment="com.android.settings.cypher.fragments.SystemSettings"
                android:icon="@drawable/ic_settings_system_settings" />
				
		<!-- Notification settings -->
		<PreferenceScreen
                android:key="notificationext_settings"
                android:title="@string/notification_settings_title"
				android:summary="@string/notification_settings_title_summary"
                android:fragment="com.android.settings.cypher.fragments.NotificationExtSettings"
                android:icon="@drawable/ic_settings_notificationext" />
				
		<!-- Button settings -->
		<PreferenceScreen
                android:key="button_settings"
                android:title="@string/button_settings_title"
				android:summary="@string/button_settings_title_summary"
                android:fragment="com.android.settings.cypher.fragments.ButtonSettings"
                android:icon="@drawable/ic_settings_buttons" />

</PreferenceScreen>