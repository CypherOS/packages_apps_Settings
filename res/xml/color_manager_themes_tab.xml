<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:title="@string/color_manager_tab_themes">

    <com.android.settings.widget.RadioButtonPreference
        android:key="theme_auto"
        android:title="@string/theme_auto_title"
        android:summary="@string/theme_auto_summary" />

    <com.android.settings.widget.RadioButtonPreference
        android:key="theme_light"
        android:title="@string/theme_light_title" />

    <com.android.settings.widget.RadioButtonPreference
        android:key="theme_dark"
        android:title="@string/theme_dark_title" />
  
    <com.android.settings.widget.RadioButtonPreference
        android:key="theme_black"
        android:title="@string/theme_black_title" />

    <PreferenceCategory android:key="category_settings"
        android:title="@string/category_settings_title">

        <SwitchPreference
            android:key="theme_alpha"
            android:title="@string/theme_alpha_title"
            android:summary="@string/theme_alpha_summary" />

    </PreferenceCategory>

</PreferenceScreen>