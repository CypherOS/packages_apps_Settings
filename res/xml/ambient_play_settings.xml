<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:key="ambient_play"
    android:title="@string/ambient_play_title">

        <com.android.settings.applications.LayoutPreference
            android:key="ambient_header"
            android:order="0"
            android:layout="@layout/ambient_play_illustration"
            android:selectable="false"/>

        <SwitchPreference
            android:key="ambient_recognition_keyguard"
            android:title="@string/ambient_play_lockscreen_title"
            settings:controller="com.android.settings.aoscp.ambient.play.AmbientPlayKeyguardPreferenceController" />

        <SwitchPreference
            android:key="ambient_recognition_notification"
            android:title="@string/ambient_play_notifications_title"
            settings:controller="com.android.settings.aoscp.ambient.play.AmbientPlayNotificationPreferenceController" />

</PreferenceScreen>
