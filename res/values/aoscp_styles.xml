<resources>

    <style name="HeaderInfo" parent="android:TextAppearance.Material.Display1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

	<style name="ColorManagerTheme" parent="Theme.AppCompat.Light.NoActionBar">
	    <!-- Color palette -->
	    <item name="colorPrimary">@*android:color/primary_device_default_settings_light</item>
		<item name="colorPrimaryDark">@*android:color/primary_dark_device_default_settings_light</item>
		<item name="android:colorSecondary">@*android:color/secondary_device_default_settings_light</item>
		<item name="colorAccent">@*android:color/accent_device_default_light</item>
		<item name="android:colorEdgeEffect">@android:color/black</item>
		
		<!-- Widget Views -->
        <item name="tabIndicatorColor">@*android:color/accent_device_default_light</item>
		
		<!-- Statusbar -->
        <item name="android:statusBarColor">@*android:color/primary_dark_device_default_settings_light</item>
		<item name="android:windowLightStatusBar">true</item>
		
		<!-- Navigation Bar -->
        <item name="android:navigationBarDividerColor">#1f000000</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
		
		<!-- Preferences -->
		<item name="preferenceTheme">@style/PreferenceTheme</item>
		<item name="preferenceBackgroundColor">@drawable/preference_background</item>
        <item name="android:listPreferredItemHeight">72dip</item>
        <item name="*android:preferenceHeaderPanelStyle">@style/PreferenceHeaderPanelSinglePane</item>
        <item name="*android:preferencePanelStyle">@style/PreferencePanelSinglePane</item>
        <item name="*android:preferenceListStyle">@style/PreferenceHeaderListSinglePane</item>
        <item name="*android:preferenceFragmentListStyle">@style/PreferenceFragmentListSinglePane</item>
        <item name="*android:preferenceFragmentPaddingSide">@dimen/settings_side_margin</item>

		<!-- Action Bar -->
		<item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@*android:color/primary_dark_device_default_settings_light</item>
	</style>

</resources>
